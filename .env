# --- LLM(vLLM/OpenAI 호환) ---
OPENAI_API_KEY=local-anything
OPENAI_BASE_URL=http://172.16.10.168:9993/v1
OPENAI_MODEL=qwen3-30b-a3b-fp8

# --- RAG 인덱스/업로드/청킹 ---
INDEX_DIR=faiss_index
UPLOAD_DIR=uploads
DATA_CSV=data/민생.csv
CHUNK_SIZE=800
CHUNK_OVERLAP=120

# 임베딩
EMBEDDING_MODEL=BAAI/bge-m3
EMBEDDING_DEVICE=cpu

# (옵션) 재랭커
ENABLE_RERANKER=true
RERANKER_MODEL=BAAI/bge-reranker-base   # 품질 올리려면 -large
RERANKER_TOP_N=5

# --- (프론트 직접 호출 시) CORS 허용 원본 ---
CORS_ORIGINS=http://172.16.10.168:3000,http://localhost:3000

ENABLE_SPARSE=1
SPARSE_LIMIT=200
SPACE_FILTER_MODE=soft
SPACE_HINT_BONUS=0.25
E5_USE_PREFIX=0
RETRIEVER_K=5
RETRIEVER_FETCH_K=64
SEARCH_TYPE=mmr
PAGE_FILTER_MODE=hard         # pageId 힌트가 오면 그 페이지만
STICKY_AFTER_MCP=true        # 폴백으로 찾은 페이지를 후속 질문에 잠깐 고정
PAGE_HINT_BONUS=0.7
TITLE_BONUS=0.25